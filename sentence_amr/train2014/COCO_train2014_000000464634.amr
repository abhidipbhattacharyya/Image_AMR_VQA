(s / sign
    :ARG0-of (a2 / announce-01
        :ARG1 (a / and
            :op1 (t / time
                :time-of (t2 / train
                    :mod (u / upcoming)))
            :op2 (p / place
                :location-of t2)))
    :accompanier (c / clock))
